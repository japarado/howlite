<% content_for :title do %>- Log In<% end %>
<% content_for :current_header do %>Log In<% end %>

<% content_for :content do %>
  <%= render 'inc/header' %>

  <div id="content" class="my-account">
    <div class="container">
      <div class="row">
        <%= devise_error_messages! %>
        <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-6 cd-user-modal">
          <div class="my-account-form">
            <ul class="cd-switcher">
              <li><a>LOGIN</a></li>
              <li><a class="selected" href="<%= new_user_registration_path %>">REGISTER</a></li>
            </ul>
            <div id="cd-login" style="border:3px solid #6DBAAF;" class="is-selected">
              <div class="page-login-form">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="form-group">
                    <div class="input-icon">
                      <i class="ti-user"></i>
                      <!--<%= f.label :email %><br/>-->
                      <%= f.email_field(:email, {autofocus: true, autocomplete: "email", required: true, :class => ['form-control'], placeholder: 'E-mail'}) %>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="input-icon">
                      <i class="ti-lock"></i>
                    <!--<%= f.label :password %><br/>-->
                    <%= f.password_field :password, autocomplete: "off",required:true,placeholder:'Password',:class=>['form-control'] %>
                    </div>
                  </div>

                  <% if devise_mapping.rememberable? -%>
                    <div class="checkbox">
                      <%# f.check_box :remember_me %>
                      <%= label_tag('',f.check_box(:remember_me)+'Remember me',{:style => ['color:black']}) %>
                    </div>
                  <% end -%>


                    <%= f.submit("Log in",:class=>'btn btn-common log-btn') %>

                <% end %>

                <%# render "users/shared/links" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

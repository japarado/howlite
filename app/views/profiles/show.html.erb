<% content_for :title do %>- Your Profile<% end %>
<% content_for :current_header do %>Profile<% end %>

<% content_for :content do %>
  <img src="<%= @profile.picture %>"/><br/>
  Name: <%= @profile.user.name %><br/>
  Contact Number: <%= @profile.contact_number %>
  Address: <%= @profile.street_address %><br/>
  City: <%= @profile.city %><br/>
  Region: <%= @profile.region %><br/>
  Description: <%= @profile.description %><br/>

  <%= link_to 'Edit', edit_profile_path(@profile) %> |
  <%= link_to 'Back', home_path %>

<% end %>
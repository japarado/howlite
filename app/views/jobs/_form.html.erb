<%= form_with(model: job, local: true) do |form| %>
  <% if job.errors.any? %>

    <div class="list-group">
      <% job.errors.full_messages.each do |message| %>
        <li class="list-group-item list-group-item-danger"><%= message %></li>
      <% end %>
    </div>
  <% end %>

  <div class="modal-body">
    <div class="form-group">
      <%= form.label(:job_title, {:class => ['control-label']}) %><span class="required" style="color: red">*</span>
      <%= form.text_field(:title, {:class => ['form-control'], required: true}) %>
    </div>
    <div class="form-group">
      <%= form.label(:job_type, :class => ['control-label']) %><span class="required" style="color: red">*</span>
      <%# fulltime %>
      <div class="radio">
        <%# form.radio_button(:job_type, "FT",{:type=>'radio'}) %>
        <%= label_tag('',form.radio_button(:job_type, "FT")+"Full-Time", {:style => ['color:black']}) %>
      </div>
      <%# part time %>
      <div class="radio">
        <%# form.radio_button(:job_type, "PT",{:type=>'radio'}) %>
        <%= label_tag('',form.radio_button(:job_type, "PT")+"Part-Time", {:style => ['color:black']}) %>
      </div>
    </div>
    <div class="form-group">
      <%= form.label(:salary, :class => ['control-label']) %>
      <span class="required" style="color: red">*</span>
      <%= form.number_field(:salary, {:class => ['form-control'], required: true, step: 0.01, min: 1.00}) %>
    </div>
    <div class="form-group">
      <%= form.label(:description, :class => ['control-label']) %><span class="required" style="color: red">*</span>
      <%= form.text_area(:desc, {:class => ['form-control'], required: true}) %>
    </div>

    <div class="modal-footer">
      <%= form.submit({:class => ['btn btn-common']}) %>
    </div>
  </div>
<% end %>
